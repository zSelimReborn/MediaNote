<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediaNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medium_orange</item>
        <item name="colorPrimaryVariant">@color/primary_orange</item>
        <item name="colorOnPrimary">@color/light_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorSecondaryVariant">@color/medium_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MediaNote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MediaNote.FabStyle" parent="Theme.MediaNote">
        <item name="colorAccent">@color/medium_blue</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Theme.MediaNote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MediaNote.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="menu">@color/light_black</item>
    </style>

    <style name="Theme.MediaNote.BottomAppBar" parent="@style/Widget.MaterialComponents.BottomAppBar.Colored" >
        <item name="actionMenuTextColor">@color/light_black</item>
    </style>

    <style name="Theme.MediaNote.EditText">
        <item name="colorControlNormal">@color/light_black</item>
        <item name="colorControlActivated">@color/light_black</item>
        <item name="colorControlHighlight">@color/light_black</item>
    </style>
</resources>